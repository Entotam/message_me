<div class="ui secondary menu">
  <%= link_to "Chatroom", root_path, class: "item" %>
  <a class="item">
    Messages
  </a>
  <a class="item">
    Friends
  </a>
  <div class="right menu">
    <% if logged_in? %>
      <div class="ui dropdown item">
        <%= session[:user_id] %> <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to 'Log out', logout_path, class: "item", method: :delete %>
          <a class="item">Profile</a>
        </div>
      </div>
    <% end %>

    <% if !logged_in? %>
      <div class="item">
        <%= link_to 'Log In', login_path, class: "ui button brown" %>
      </div>
    <% end %>

  </div>
</div>